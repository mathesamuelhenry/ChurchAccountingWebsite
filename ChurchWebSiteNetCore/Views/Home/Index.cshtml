@model SSAuth.Models.AppModels.Request.AuthUser.SignIn;
@{
    ViewData["Title"] = "Home Page";
    var signInError = ViewBag.SignInError;
}

@if (!string.IsNullOrEmpty(signInError))
{
    <div class="alert alert-danger" role="alert">
        <strong>WARNING!</strong> Sign In Error : @signInError
    </div>
}

<div class="jumbotron jumbotron-fluid">
    <div class="container-fluid">
        <h1 class="display-4">Fluid jumbotron</h1>
        <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
    </div>
</div>

<!-- Load Login Screen -->
@{
    await Html.RenderPartialAsync("_LoginScreenPartial");
}


