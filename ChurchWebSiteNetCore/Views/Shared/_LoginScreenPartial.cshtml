@model SSAuth.Models.AppModels.Request.AuthUser.SignIn

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="row col-md-12">
    <div class="col-md-7"></div>
    <div class="col-md-5">
        <form method="post" asp-action="Login" asp-controller="Auth" novalidate\>
            <h2>Sign in</h2>
            <br />
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="LoginId" class="form-control" placeholder="email@example.com">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" asp-for="Password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</div>