@{
    ViewData["Title"] = "Sign Up";
    var SecurityQuestionList = ViewBag.QuestionList;
    var RegisterError = ViewBag.ErrorMessage;
}

@if (!string.IsNullOrEmpty(RegisterError))
{
    <div class="alert alert-danger" role="alert">
        <strong>WARNING!</strong> Register Error : @RegisterError
    </div>
}

